# The Grey Tutor Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="The Grey Tutor"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production"
ENCRYPTION_KEY="your-encryption-key-32-characters-long"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/thegreytutor"

# Supabase Configuration (Alternative to local PostgreSQL)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
CACHE_TTL_SECONDS=3600

# Neo4j Graph Database
NEO4J_URI="bolt://localhost:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your-neo4j-password"

# AI API Keys
OPENAI_API_KEY="sk-your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp-free"

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=30
DEFAULT_MODEL="gpt-3.5-turbo"
FALLBACK_MODEL="gpt-3.5-turbo"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
FREE_TIER_DAILY_LIMIT=20
SUPPORTER_TIER_DAILY_LIMIT=50

# Privacy and Security
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ANONYMOUS_MODE_ENABLED=true

# Monitoring and Logging
LOG_LEVEL="INFO"
STRUCTURED_LOGGING=true
PROMETHEUS_ENABLED=false
SENTRY_DSN=""

# Ko-fi Integration (for community funding)
KOFI_WEBHOOK_SECRET="your-kofi-webhook-secret"
KOFI_VERIFICATION_TOKEN="your-kofi-verification-token"

# CORS Origins (add your frontend URLs)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8081,http://localhost:19006,exp://localhost:19000"

# Content Configuration
CONTENT_BASE_PATH="../docs/sources"
ENABLE_CONTENT_UPDATES=true

# File Upload Settings
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=".txt,.pdf,.docx,.md"
